<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lecturers</title>
    <link rel="stylesheet" href="/styles.css" />
    <!-- Add a CSS file if needed -->
    <style>
      table {
        width: 100%;
        margin: 20px 0;
        border: 3px double black;
        border-collapse: separate;
        border-spacing: 1px; /* Add spacing between cells */
      }

      th,
      td {
        padding: 8px;
        text-align: left;
        font-size: 14px;
        white-space: nowrap;
        border: 1px solid black; /* Single border for individual cells */
      }

      th {
        font-weight: bold;
        background-color: #f2f2f2;
      }

      tr:nth-child(even) {
        background-color: #f9f9f9;
      }

      tr:hover {
        background-color: #f1f1f1;
      }

      h1 {
        font-size: 24px;
      }

      a {
        margin-top: 10px;
        display: inline-block;
        text-decoration: none;
        color: #007bff;
        font-size: 16px;
      }

      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <h1>Lecturers</h1>
    <a href="/">Home</a> <!-- Link to the Home page -->

    <% if (lecturers.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>LecturerID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% lecturers.forEach(lecturer => { %>
            <tr>
                <td><%= lecturer._id %></td>
              <td><%= lecturer.name %></td>
              <td><%= lecturer.did %></td>
              <td>
                <a href="/lecturers/delete/<%= lecturer._id %>">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No lecturers found.</p>
    <% } %>

  </body>
</html>
