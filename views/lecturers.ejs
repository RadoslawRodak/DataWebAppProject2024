<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lecturers</title>
    
    <style>
      table {
        width: auto;
        margin: 20px 0;
        border: 3px double black;
        border-collapse: separate;
        border-spacing: 1px; /* Add spacing between cells */
      }

      th,
      td {
        padding: 1px;
        text-align: left;
        font-size: 14px;
        white-space: nowrap;
        border: 1px solid black; /* Single border for individual cells */
      }


     

    </style>
  </head>
  <body>
    <h1>Lecturers</h1>
    <a href="/">Home</a> <!-- Link to the Home page -->

    <% if (lecturers.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>LecturerID</th>
            <th>Name</th>
            <th>Department</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% lecturers.forEach(lecturer => { %>
            <tr>
                <td><%= lecturer._id %></td>
              <td><%= lecturer.name %></td>
              <td><%= lecturer.did %></td>
              <td>
                <a href="/lecturers/delete/<%= lecturer._id %>">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No lecturers found.</p>
    <% } %>

  </body>
</html>
