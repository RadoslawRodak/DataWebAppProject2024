<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Students</title>
  <style>
    h1 {
      text-align: left;
      font-size: 24px;
      margin-bottom: 10px;
    }
    nav {
      text-align: left;
      margin-bottom: 15px;
    }
   
    table {
      border-collapse: separate;
      border-spacing: 1px;
      margin: 10px 0;
      width: auto;
    }
    th, td {
      border: 3px double black;
      padding: 5px;
      text-align: center;
      font-size: 14px;
      white-space: nowrap;
    }
    th {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Students</h1>
  <nav>
    <a href="/add-student">Add Student</a>
    <a href="/">Home</a>
  </nav>
  <table>
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Name</th>
        <th>Age</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(student => { %> <!-- Changed from 'student' to 'students' -->
        <tr>
          <td><%= student.sid %></td>
          <td><%= student.name %></td>
          <td><%= student.age %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
