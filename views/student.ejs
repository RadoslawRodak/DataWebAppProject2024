<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Students</title>
  <style>
    h1 {
      text-align: left;
      font-size: 24px;
      margin-bottom: 10px;
    }
    nav {
      text-align: left;
      margin-bottom: 15px;
    }

    /* Container for the links */
    .nav-links {
      display: flex;
      flex-direction: column; /* Stack links vertically */
      gap: 1px; /* Space between links */
    }

    /* Style for the table */
    table {
      width: auto;
      margin: 2px 0;
      border: 3px double black; 
      border-collapse: separate; 
      border-spacing: 1px; /* Add spacing between cells */
    }

    th, td {
      padding: 1px; /* Adjust padding for individual cells */
      text-align: center;
      font-size: 14px;
      white-space: nowrap;
      border: 1px solid black; /* Single border for individual cells */
    }

    th {
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Students</h1>
  <nav>
    <div class="nav-links">
      <a href="/students/add">Add Student</a> <!-- Add Student link -->
      <a href="/">Home</a> <!-- Home link -->
    </div>
  </nav>
  <table>
    <thead>
      <tr>
        <th>Student ID</th>
        <th>Name</th>
        <th>Age</th>
        <th>Actions</th> 
      </tr>
    </thead>
    <tbody>
      <% students.forEach(student => { %>
        <tr>
          <td><%= student.sid %></td>
          <td><%= student.name %></td>
          <td><%= student.age %></td>
          <td><a href="/students/edit/<%= student.sid %>">Update</a></td> <!-- Update link -->
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
